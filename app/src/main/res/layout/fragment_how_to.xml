<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="Tree"
            type="com.decagon.myrootapp.data.models.tree.Tree" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/howtoplant"
        android:fillViewport="true">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.planttree.HowToFragment"
            android:orientation="vertical"
            android:weightSum="4"

            >

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/font_color_secondary">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backNavHowId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/arrow"
                        android:contentDescription="@string/back_nav" />

                    <ProgressBar
                        android:id="@+id/progressBar2HowId"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:progressTint="@color/green_regular"
                        android:progress="80"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="260dp"
                        android:layout_height="1dp"

                        />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.Toolbar>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"

                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImageTypeId"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/osehi" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/headingHowId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/heading_how"
                    android:textAlignment="center"
                    android:textColor="@color/green_regular"
                    android:textSize="@dimen/heading_typeTree" />

                <TextView
                    android:id="@+id/instructionHowId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/instruction_how"
                    android:textAlignment="center"
                    android:textSize="@dimen/instruction_typeTree" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_weight="1"

                >

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/remote_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="0dp"
                        android:layout_width="122dp"
                        android:layout_height="122dp"
                        app:cardCornerRadius="20dp"
                        android:elevation="8dp"

                        >

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/card_green_bg">

                            <androidx.cardview.widget.CardView
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="25dp"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                app:cardCornerRadius="50dp" />


                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/remoteId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remote_option"
                        android:layout_marginTop="20dp" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/inPerson_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_person_green"
                        android:contentDescription="@string/in_person" />

                    <TextView
                        android:id="@+id/inPersonId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="42dp"
                        android:layout_gravity="center"
                        android:text="@string/in_person1" />


                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <Button
                    android:id="@+id/buttonHowId"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg"
                    android:fontFamily="sans-serif"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textColor="#ffffff" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</layout>